#include <iostream>
#include <vector>
#include <algorithm>
#include <string>
using namespace std;


int main(void) {
	int N = 0;//줄 스는 사람에 대한 입력값
	cin >> N;
	vector<int> v(N);//사람에 따른 배열 생성
	int min_time = 0;

	for (int i = 0;i < v.size();i++) {
		cin >> v[i];//각각 요소로 시간 받기
	}
	sort(v.begin(), v.end()); //오름차순 정렬

	for (int i = 0; i < v.size();i++) {
		for (int j = 0; j <= i; j++) {
			min_time += v[j]; // 2중 for문으로 누적합 구현

		}
	}
	
	cout << min_time;
	
	return 0;
}
